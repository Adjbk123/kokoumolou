{% extends 'base.html.twig' %}

{% block title %}Liste des villages{% endblock %}
{% block breadcrumb %}{% endblock %}
{% block title1 %}Liste des villages{% endblock %}
{% block title2 %}Village{% endblock %}
{% block title3 %}Liste{% endblock %}


{% block body %}
<div class="table-responsive">
    <table id="basic-datatable" class="table table-hover dt-responsive nowrap w-100">
        <thead class="table-secondary">
        <tr>
            <th>#</th>
            <th>Libelle</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for village in villages %}
            <tr>
                <td>{{ village.id }}</td>
                <td>{{ village.libelle }}</td>
                <td> {% if village.description ==NULL %}
                        ---
                    {% else %} {{ village.description }} {% endif %} </td>
                <td>
                    <a  class="btn btn-sm btn-secondary rounded-pill" title="Voir" href="{{ path('app_village_show', {'id': village.id}) }}"><i class="mdi mdi-eye"></i></a>
                    <a  class="btn btn-sm btn-primary rounded-pill" title="Editer" href="{{ path('app_village_edit', {'id': village.id}) }}"><i class="mdi mdi-pencil-box"></i></a>
                </td>

            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun enregistrement </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

{% endblock %}

{% block datatables %}{% endblock %}

{% extends 'base.html.twig' %}
{% set imageUrl = absolute_url(asset('assets1/media/photo17@2x.jpg'))  %}

{% block title %}Mon profil{% endblock %}
{% block breadcrumb %}{% endblock %}
{% block title1 %}Mon profil{% endblock %}
{% block title2 %}Paramètres{% endblock %}
{% block title3 %}Profil{% endblock %}


{% block body %}
    <div class="bg-image" style="background-image:url('{{ imageUrl }}');">
        <div class="bg-black-25">
            <div class="content content-full">
                <div class="py-5 text-center">
                    <a class="img-link" href="{{ path('app_profil', {'id': app.user.id}) }}">
                        <img class="img-avatar img-avatar96 img-avatar-thumb" src="{{ asset('assets1/media/avatar10.jpg') }}" alt="">
                    </a>
                    <h1 class="fw-bold my-2 text-white"> {{ app.user.prenom }} {{ app.user.nom }}</h1>
                    <h2 class="h4 fw-bold text-white-75">
                       <a class="text-primary-lighter" href="javascript:void(0)"> {{ app.user.email }} </a>
                    </h2>
                    <div>
                        <a  type="button" href="{{ path('app_admin') }}"   class="btn btn-light"> Retour à l'accueil</a>
                    </div>

                </div>
            </div>
        </div>
    </div>


    <div id="form" class="mt-4">


        {% for message in app.flashes('error') %}
            <div class="alert alert-warning">
                {{ message }}
            </div>
        {% endfor %}

        <form action="{{ path('app_profil') }}" method="post" class="mt-4">
            <div class="form-group">
                <label class="form-label" for="current_password">Mot de passe actuel: <span class="text-danger">*</span> </label>
                <input type="password" id="current_password" name="current_password" class="form-control" required>
            </div>
            <div class="form-group">
                <label class="form-label" for="new_password">Nouveau mot de passe: <span class="text-danger">*</span></label>
                <input type="password" id="new_password" name="new_password" class="form-control" required>
            </div>
            <div class="form-group">
                <label class="form-label" for="confirm_password">Confirmez le nouveau mot de passe: <span class="text-danger">*</span></label>
                <input type="password" id="confirm_password" name="confirm_password" class="form-control" required>
            </div>

            <div class="text-danger mt-2">
                NB : Vous serez déconnecté après le changement de votre mot de passe.
            </div>
            <div class="mt-3">
                <button type="submit" class="btn btn-primary">Changer le mot de passe</button>

            </div>
        </form>


    </div>

{% endblock %}
